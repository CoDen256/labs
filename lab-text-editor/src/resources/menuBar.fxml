<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<MenuBar xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="editor.controllers.MenuBarController">

    <Menu text="File">
        <MenuItem text="New" onAction="#onNew" />
        <MenuItem text="Load" onAction="#onLoad" />
        <MenuItem text="Save" onAction="#onSave" />
<!--        <MenuItem text="OpenDir" onAction="#onOpenDir" />-->
    </Menu>



    <Menu text="Edit">
        <MenuItem text="Cut" onAction="#onCut" />
        <MenuItem text="Copy" onAction="#onCopy" />
        <MenuItem text="Paste" onAction="#onPaste" />
        <MenuItem text="Redo" onAction="#onRedo" />
        <MenuItem text="Undo" onAction="#onUndo" />
        <!--        <MenuItem text="OpenDir" onAction="#onOpenDir" />-->
    </Menu>

    <Menu text="Settings">
        <MenuItem text="Larger" onAction="#onLarger" />
        <MenuItem text="Smaller" onAction="#onSmaller" />
        <MenuItem text="Dark mode" onAction="#onDark" />
        <MenuItem text="Bright mode" onAction="#onBright" />
        <!--        <MenuItem text="OpenDir" onAction="#onOpenDir" />-->
    </Menu>


    <Menu text="Help">
        <MenuItem text="About" onAction="#onAbout" />
    </Menu>

    <Menu text="Account">
        <MenuItem text="Log out" fx:id="logout" />
    </Menu>

</MenuBar>